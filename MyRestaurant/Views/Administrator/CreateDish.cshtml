@model DishViewModel

<div>
    @using (Html.BeginForm("CreateDish", "Administrator", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <label class="form-label"> Название </label>
        <input required="required" type="text" name="@nameof(DishViewModel.Name)" class="form-control">
        <br />
        <br />
        <label class="form-label"> Ингридиенты </label>
        <input required="required" type="text" name="@nameof(DishViewModel.Ingridient)" class="form-control">
        <br />
        <br />
        <label class="form-label"> Цена </label>
        <input type="number" min="0.5" step="0.1" name="@nameof(DishViewModel.Price)" class="form-control">
        <br />
        <br />
        <label class="form-label"> Вес </label>
        <input type="number" min="0.1" step="0.1" name="@nameof(DishViewModel.Weight)" class="form-control">
        <br />
        <br />
        <input type="file" name="UploadedFile" id="uploadedFile" />
        <br />
        <br />
        <p><input type="submit" value="Создать блюдо" class="btn btn-info"></p>
     }
    </div>